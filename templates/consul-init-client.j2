[Unit]
Description=Consul Client
After=network.target tinc.service

[Service]
User=consul
Group=consul
ExecStart=/usr/local/bin/consul agent -config-dir /etc/consul.d/client -bind {{ node_ip }}
ExecReload=/bin/kill -HUP $MAINPID
ExecStop=/bin/kill $MAINPID
KillMode=process
Restart=always

[Install]
WantedBy=multi-user.target
Alias=consul-client.service

